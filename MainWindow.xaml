<Window x:Class="Files2List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Files2List"
        mc:Ignorable="d"
        Title="Files2List" Height="100" Width="200" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="List all files in the folder in Excel!" Margin="5" HorizontalAlignment="Center"/>

        <Button x:Name="openFolder" 
                    Content="Open location" 
                    MinHeight="10" 
                    MinWidth="30" 
                    Margin="10" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Click="openFolder_Click"/>

    </StackPanel>
</Window>
